        <div class="col">
            <h4>Name</h4>
        </div>
        <div class="col">
            <h4>DOA</h4>
        </div>
        <div class="col">
            <h4>Purpose</h4>
        </div>
        <div class="col">
            <h4>Nature</h4>
        </div>
        <div class="col">
            <h4>From</h4>
        </div>
        <div class="col">
            <h4>To</h4>
        </div>
    </div>
    <% for(var i=0;i<users.length;i++) { if(users[i].desig!="HOD"){%>
        <%for(var j=0;j<users[i].leaves.length;j++) {if(users[i].leaves[j].approved ==0){%>
    <div class="row" style="margin-top:0px;background-color:rgba(173,4,4,0.31);height:50;border:1px solid white">
        <div class="col">
            <h5><%= users[i].name %></h5>
        </div>
        <div class="col">
            <h5><%= users[i].leaves[j].doa.toDateString() %></h5>
        </div>
        <div class="col">
            <h5><%= users[i].leaves[j].purpose %></h5>
        </div>
        <div class="col">
            <h5><%= users[i].leaves[j].nature %></h5>
        </div>
        <div class="col">
            <h5><%= users[i].leaves[j].from.toDateString() %></h5>
        </div>
