<!DOCTYPE html>
<html>
    <head>
        <title>
            Edit
        </title>
    <link rel="stylesheet" type="text/css" href="signup.css">    
    <link src="signup.js">
    </head>
    <body>
        <h1> EDIT: <%= User.name %></h1>
        <form id="form" action ="/Admin/<%= User._id %>?_method=PUT" method="POST">
            <label>Name:</label>
            <input type="text" name="user[name]" value="<%= User.name %>" required>
            </br>
            <label>Registation number:</label>
            <input type="text" name="user[regID]" value="<%= User.regID %>" required>
            </br>
            <label>Password:</label>
            <input id="pass1" type="password" value="<%= User.password %>" required>
            </br>
            <label>Retype password:</label>
            <input id="pass2" name="user[password]" value="<%= User.password %>" type="password" required>
            </br>
            <label>Department:</label>
            </br>
            <label>CSE</label>
            <input type="radio" name="user[dept]" value="CSE" required>
            <label>EEE</label>
            <input type="radio" name="user[dept]" value="EEE" required>
            <label>ECE</label>
            <input type="radio" name="user[dept]" value="ECE" required>
            <label>MECH</label>
            <input type="radio" name="user[dept]" value="MECH" required>
            </br>
            <label>Designation:</label>
            </br>
            <label>Head of the Department</label>
            <input type="radio" name="user[desig]" value="HOD" required>
            <label>Staff</label>
            <input type="radio" name="user[desig]" value="Staff" required>
            </br>
        </form>
        <button id="submit">Submit</button>
        <script>
            var submit = document.getElementById("submit");
            submit.addEventListener("click",function(){
                var pass1 = document.getElementById("pass1");
                var pass2 = document.getElementById("pass2");
                
                if(pass1.value == pass2.value){
                    document.getElementById("form").submit();
                }
                else{
                    alert("passwords do not match try again");
                }
            });
        </script>
    </body>
</html>